<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_inherit_form" model="ir.ui.view">
        <field name="name">view.move.inherit.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_show_delivery_details"
                    class="oe_stat_button"
                    icon="fa-file-text"
                    groups="trescloud_test_jerry.group_view_detail_delivery"
                    type="object">
                    <field name="account_picking_count" widget="statinfo" string="Detalle de la entrega"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
