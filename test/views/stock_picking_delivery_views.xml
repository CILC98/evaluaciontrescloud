<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_inherit_tree_view" model="ir.ui.view">
        <field name="name">stock.picking.inherit.tree.view</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                        <button name="action_change_invoiced"
                        type="object"
                        string="Cambiar a facturado"
                        class="btn-primary"
                        groups="trescloud_test_jerry.group_verified_detail_delivery"/>
                </header>
                <field name="name"/>
                <field name="invoiced" widget="boolean"/>
            </tree>
        </field>
    </record>
    <record id="stock_picking_inherit_view" model="ir.ui.view">
        <field name="name">stock.picking.inherit.view</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="invoiced" readonly="1"/>
                    </group>
                    <field name="move_ids">
                        <tree>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
         