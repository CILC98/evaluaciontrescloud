<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_delivery_detail" model="ir.ui.view">
        <field name="name">account.move.form.delivery.detail.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                    name="action_show_delivery_details"
                    type="object"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('delivery_detail_count', '=', 0)]}">
                    <field string="Detalles de entrega" name="delivery_detail_count"
                        widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>

    <record id="action_mark_invoiced_server" model="ir.actions.server">
        <field name="name">Marcar detalle de entrega como facturado</field>
        <field name="model_id" ref="model_delivery_detail" />
        <field name="binding_model_id" ref="test.model_delivery_detail" />
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_mark_invoiced()</field>
        <field name="groups_id" eval="[(4, ref('test.group_delivery_detail_administrator'))]" />
    </record>
</odoo>